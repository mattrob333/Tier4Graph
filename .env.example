# Backend - Neo4j Connection
NEO4J_URI=bolt://localhost:7687          # Local: bolt://localhost:7687 | Aura: neo4j+s://xxxx.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASSWORD=yourpassword
NEO4J_DATABASE=neo4j

# AI/LLM Configuration
LLM_PROVIDER=openai                       # Options: openai, anthropic, mock
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4.1                      # Options: gpt-4.1, gpt-4o, gpt-4o-mini, gpt-4-turbo
ANTHROPIC_API_KEY=                        # Optional: for Claude support
TAVILY_API_KEY=                           # Optional: for web search

# Frontend
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
